			<div class="content-wrapper">

				{{ this.render( '/partials/content-header.twig') | raw  }}

			    <!-- Main content -->
			    <section class="content"> {{ content }} </section>
			    <!-- /.content -->
			</div>
			<!-- /.content-wrapper -->                                                                                 

			{{ this.render( '/partials/side-control.twig' ) | raw }}

		</div>
