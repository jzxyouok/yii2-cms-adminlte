<div class="box">

	{{ use('yii/widgets/ActiveForm') }}
	{% set form = active_form_begin() %}

	<div class="box-header">
      	<h3 class="box-title">Manage position</h3> 
      	<div class="pull-right">
      		<input type="submit" value="Save Position" class="btn btn-primary btn-flat" />
      	</div>
    </div>
	<!-- /.box-header -->
	<div class="box-body">
		<table class="table table-striped table-bordered table-hover" id="">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Code</th>
					<th>Position</th>
				</tr>
			</thead>
			<tbody>
				{% for list in lists %}
					<tr>
						<td>{{ list.id }}</td>
						<td>{{ list.name }}</td>
						<td>{{ list.code }}</td>
						<td>{{ form.field( list, '[' ~ list.id ~ ']position' ).label(false) | raw }}</td>
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Code</th>
					<th>Position</th>
				</tr>
			</tfoot>
		</table>
	</div>

	{{ active_form_end() }}

</div>